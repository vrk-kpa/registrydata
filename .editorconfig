# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default Code Style
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Python Code Style
[*.py]
indent_size = 4
max_line_length = 127
